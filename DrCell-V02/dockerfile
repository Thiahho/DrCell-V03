-

    # Usa la imagen base de ASP.NET Core 8
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Usa la imagen del SDK para build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copia el archivo del proyecto y restaura dependencias
COPY ["*.csproj", "./"]
RUN dotnet restore

# Copia el resto del c贸digo y compila
COPY . .
RUN dotnet build -c Release -o /app/build

# Publica la aplicaci贸n
FROM build AS publish
RUN dotnet publish -c Release -o /app/publish /p:UseAppHost=false

# Imagen final
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DrCell-V01.dll"]